# Environment variables for TISB World
# Copy this to .env.local and fill in your actual values

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000/api

# Legacy API Configuration (for fallback)
# VITE_API_BASE_URL=http://localhost:3001
VITE_API_KEY=your-api-key-here

# YouTube Data API v3 Configuration
VITE_YOUTUBE_API_KEY=your-youtube-api-key-here

# Spotify Web API Configuration
VITE_SPOTIFY_CLIENT_ID=your-spotify-client-id-here
VITE_SPOTIFY_CLIENT_SECRET=your-spotify-client-secret-here

# OpenAI Configuration (when ready to integrate)
VITE_OPENAI_API_KEY=your-openai-key-here

# Claude Configuration (when ready to integrate)  
VITE_CLAUDE_API_KEY=your-claude-key-here

# Airtable Configuration (when ready to integrate)
VITE_AIRTABLE_API_KEY=your-airtable-key-here
VITE_AIRTABLE_BASE_ID=your-base-id-here

# Notion Configuration (when ready to integrate)
VITE_NOTION_API_KEY=your-notion-key-here
VITE_NOTION_DATABASE_ID=your-database-id-here

# OpenAI API Configuration (for Whisper transcription)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for feedback submission)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=your_email@gmail.com
TO_EMAIL=rajeev@theideasandbox.com

# Optional: Database Configuration (if using)
DATABASE_URL=your_database_connection_string
